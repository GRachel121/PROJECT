page{
  height: 100%
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #ffffff

} 
.register-icon{
  flex: none;
}
.register-img{
  width: 200rpx;
  height: 200rpx;
  border:#ffffff;
  border-radius: 200rpx;
  margin-bottom: 5px;
}

.register-headline{
  
  color: #1c0488;
  text-align: center;
  text-shadow:2px 2px 1px #cccccc;
 
}

.login-from {

  margin-top: 10px;

  flex: auto;

  height:100%;

}

.inputView {
  line-height: 30px;
}

.inputView2 {
  line-height: 40px;
}

.loginLab {

  margin: 15px 15px 15px 10px;

  color: #000000;

  font-size: 14px

}

.loginLab2 {

  margin: 15px 15px 15px 10px;

  color: #000000;

  font-size: 14px;
  line-height:15px;

}

.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  color: #545454;
  font-size: 14px
}

.inputText2 {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 12px;
  color: #545454;
  font-size: 14px;
}


.hintView{
  line-height: 3px;
}
.hint {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 0px;
  color: #8280f08c;
  font-size: 10px;
}


/* wxss */
.radio-group{
  display: flex;
  align-items: center;
}


.radio{
  font-size: 14px;
  color:#05043dcb;
  font-weight: bold;
  margin-left: 50px;
  margin-top: 15px;
}

.buttonView{
  margin-top: 50px;
}

.button{
  background-color: #27b65e;
  margin-left: 30px;
  margin-right: 30px;
  color: #ffffff;
  font-weight: bold;
  letter-spacing: 5px;
}